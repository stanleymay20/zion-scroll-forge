{
  "name": "@scrolluniversity/backend",
  "version": "1.0.0",
  "description": "ScrollUniversity Backend API - Divine Educational Infrastructure",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "start:cluster": "NODE_ENV=production CLUSTER_WORKERS=4 node dist/index.js",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testNamePattern='integration'",
    "test:e2e": "jest --testNamePattern='e2e'",
    "test:ci": "jest --ci --coverage --watchAll=false",
    
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    
    "migrate": "npx prisma migrate dev",
    "migrate:prod": "npx prisma migrate deploy",
    "migrate:reset": "npx prisma migrate reset --force",
    "generate": "npx prisma generate",
    "seed": "ts-node prisma/seed.ts",
    "seed:prod": "NODE_ENV=production ts-node prisma/seed.ts",
    
    "db:setup": "npx prisma migrate dev && npx prisma generate && npm run seed",
    "db:setup:prod": "npx prisma migrate deploy && npx prisma generate && npm run seed:prod",
    "db:reset": "npx prisma migrate reset --force && npm run seed",
    "db:backup": "pg_dump $DATABASE_URL > backup.sql",
    "db:restore": "psql $DATABASE_URL < backup.sql",
    
    "docker:build": "docker build -f Dockerfile.production -t scrolluniversity/api:latest .",
    "docker:run": "docker-compose -f docker-compose.production.yml up -d",
    "docker:stop": "docker-compose -f docker-compose.production.yml down",
    "docker:logs": "docker-compose -f docker-compose.production.yml logs -f",
    
    "security:audit": "npm audit --audit-level=high",
    "security:fix": "npm audit fix",
    "security:check": "snyk test",
    
    "validate:production": "npm run type-check && npm run lint && npm run test:ci && npm run security:audit",
    "validate:health": "curl -f http://localhost:3001/health || exit 1",
    "validate:metrics": "curl -f http://localhost:3001/metrics || exit 1",
    
    "logs:view": "tail -f logs/scroll-university-$(date +%Y-%m-%d).log",
    "logs:error": "tail -f logs/scroll-university-error-$(date +%Y-%m-%d).log",
    "logs:clean": "find logs -name '*.log' -mtime +30 -delete",
    
    "monitoring:start": "docker-compose -f docker-compose.monitoring.yml up -d",
    "monitoring:stop": "docker-compose -f docker-compose.monitoring.yml down",
    
    "backup:create": "ts-node scripts/backup-database.ts",
    "backup:restore": "ts-node scripts/restore-database.ts",
    "backup:schedule": "crontab scripts/backup-cron.txt",
    
    "deploy:staging": "npm run validate:production && npm run docker:build && docker tag scrolluniversity/api:latest scrolluniversity/api:staging",
    "deploy:production": "npm run validate:production && npm run docker:build && docker tag scrolluniversity/api:latest scrolluniversity/api:production",
    
    "admissions:setup": "ts-node scripts/setup-admissions-system.ts",
    "admissions:infrastructure": "ts-node scripts/setup-admissions-infrastructure.ts",
    "admissions:validate": "ts-node scripts/validate-admissions-infrastructure.ts",
    "admissions:validate-schema": "ts-node scripts/validate-admissions-schema.ts",
    "admissions:dev": "nodemon src/admissions-server.ts",
    "admissions:build": "tsc src/admissions-server.ts --outDir dist",
    "admissions:start": "node dist/admissions-server.js",
    
    "qa:admissions": "ts-node scripts/run-admissions-qa.ts",
    "qa:admissions:dev": "ts-node scripts/run-admissions-qa.ts --environment development --verbose",
    "qa:admissions:prod": "ts-node scripts/run-admissions-qa.ts --environment production --reports",
    "qa:admissions:ci": "ts-node scripts/run-admissions-qa.ts --environment ci-cd --output qa-results.json",
    "qa:validate": "ts-node scripts/validate-admissions-testing.ts",
    "qa:unit": "ts-node scripts/run-admissions-qa.ts --suites unit --verbose",
    "qa:integration": "ts-node scripts/run-admissions-qa.ts --suites integration --verbose",
    "qa:performance": "ts-node scripts/run-admissions-qa.ts --suites performance --verbose",
    "qa:uat": "ts-node scripts/run-admissions-qa.ts --suites uat --verbose",
    
    "student-integration:validate": "ts-node scripts/validate-student-integration.ts",
    
    "clean": "rm -rf dist coverage node_modules/.cache",
    "clean:all": "npm run clean && rm -rf node_modules",
    "reinstall": "npm run clean:all && npm install",
    
    "prestart": "npm run build",
    "prestart:prod": "npm run build && npm run migrate:prod",
    "prebuild": "npm run clean && npm run generate",
    "postinstall": "npm run generate"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "prom-client": "^14.2.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.7.1",
    "@prisma/client": "^5.7.1",
    "redis": "^4.6.12",
    "ioredis": "^5.3.2",
    "compression": "^1.7.4",
    "joi": "^17.11.0",
    "express-rate-limit": "^7.1.5",
    "multer": "^1.4.5-lts.1",
    "stripe": "^14.9.0",
    "axios": "^1.6.2",
    "ws": "^8.14.2",
    "socket.io": "^4.7.4",
    "nodemailer": "^6.9.7",
    "crypto": "^1.0.1",
    "uuid": "^9.0.1",
    "ethers": "^6.8.1",
    "ipfs-http-client": "^60.0.1",
    "@openzeppelin/contracts": "^5.0.1",
    "express-validator": "^7.0.1",
    "http-graceful-shutdown": "^3.1.13",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-elasticsearch": "^0.17.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/ws": "^8.5.10",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "@types/compression": "^1.7.5",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "prettier": "^3.1.1",
    "jest-junit": "^16.0.0",
    "jest-html-reporters": "^3.1.5",
    "jest-serializer-path": "^0.1.15",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "snyk": "^1.1266.0"
  }
}